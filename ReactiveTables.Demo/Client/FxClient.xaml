<Window x:Class="ReactiveTables.Demo.Client.FxClient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Client="clr-namespace:ReactiveTables.Demo.Client"
        Title="FxClient" Height="300" Width="300">
 <Window.DataContext>
        <Client:FxClientViewModel x:Name="ViewModel"/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Button Content="Start server"></Button>
        </StackPanel>
        <ScrollViewer Grid.Row="2">
            <StackPanel>
                <Label Content="Currencies" HorizontalAlignment="Center" />
                <DataGrid ItemsSource="{Binding Path=CurrencyPairs}" VirtualizingPanel.IsVirtualizing="True"
                          VirtualizingPanel.VirtualizationMode="Recycling" VirtualizingPanel.CacheLengthUnit="Page"
                          VirtualizingPanel.CacheLength="2">
                </DataGrid>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
