<Window x:Class="ReactiveTables.Demo.Client.FxClientSyncfusion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Demo="clr-namespace:ReactiveTables.Demo"
        xmlns:Syncfusion="clr-namespace:ReactiveTables.Demo.Syncfusion"
        xmlns:Client="clr-namespace:ReactiveTables.Demo.Client"
        Title="FxClientSyncfusion" Height="600" Width="800">
    <Window.DataContext>
        <Client:FxClientSyncfusionViewModel x:Name="ViewModel"></Client:FxClientSyncfusionViewModel>
    </Window.DataContext>
    <Grid>
        <ScrollViewer CanContentScroll="True"
                          HorizontalScrollBarVisibility="Auto"
                          VerticalScrollBarVisibility="Auto">
            <Syncfusion:SyncfusionTestGridControl ViewModel="{Binding}" ColumnCount="{Binding Path=ColumnCount}" />
        </ScrollViewer>
    </Grid>
</Window>
